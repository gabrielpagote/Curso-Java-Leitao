package pacote;

import javax.swing.*;

public class classe {
 public static void main(String[] args) {
	JFrame jframe = new JFrame();
	String nome = 	JOptionPane.showInputDialog(jframe, "Quem é o amor da sua vida?");
	String nomeNovo = "";
	
	if(nome == "Juliana Moura Mendonça") {
		JOptionPane.showMessageDialog(jframe, "Muito bem! Essa mesmo <3");
	}
	else {
			nomeNovo = JOptionPane.showInputDialog(jframe, "Não tem medo do perigo não? Tente novamente.");
			while ( nomeNovo != "Juliana Moura Mendonça") {
				nomeNovo = JOptionPane.showInputDialog(jframe, "Não tem medo do perigo não? Tente novamente.");

	}
	
	
}
}
}
